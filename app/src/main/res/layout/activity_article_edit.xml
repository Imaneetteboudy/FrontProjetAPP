<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ArticleEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F3CBCB"
            android:backgroundTint="#F3CBCB"
            android:fontFamily="serif"
            android:text="Libelle"
            android:textAlignment="center"
            android:textColor="#8E5454"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/article_label_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="inserer libelle "
            android:textAlignment="center"
            android:textColor="#EAC9C9"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F3CBCB"
            android:fontFamily="serif"
            android:text="Prix"
            android:textAlignment="center"
            android:textColor="#8E5454"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/article_price_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="inserer prix"
            android:textAlignment="center"
            android:textColor="#EAC9C9"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F3CBCB"
            android:fontFamily="serif"
            android:text="Categorie"
            android:textAlignment="center"
            android:textColor="#8E5454"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3EFEF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#A36766"
            android:backgroundTint="#6058AA"
            android:shadowColor="#9F5E5E"
            android:text="Update"
            android:textColor="#F3B3B3"
            app:iconTint="#784040" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#F00"
            android:text="Delete"
            app:cornerRadius="60dp"
            app:strokeColor="#C88888" />

    </LinearLayout>


</LinearLayout>